@model dynamic

@{
    ViewData["Title"] = "CTM - Сотрудники";
}
<h1>Пользователи</h1>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                E-mail
            </th>
            <th>
                Qualifications
            </th>
            <th>
                Languages known
            </th>
        </tr>
    </thead>
    <tbody>
        @for(int i=0;i<Model.Users.Count;i++)
            {
        <tr>
            <td>
                @Model.Users[i].Id
            </td>
            <td>
                @Model.Users[i].name
            </td>
            <td>
                @Model.Users[i].eMail
            </td>
            <td>
                @Model.Qualifications[i]
            </td>
            <td>
                @Model.Languages[i]
            </td>
        </tr>
            }
    </tbody>
</table>


<style>
    body {
        font-family: Arial, sans-serif;
    }
    /* Стиль для таблицы */
    table {
        width: 100%;
        border-collapse: collapse;
    }

    /* Стиль для заголовка таблицы */
    th {
        background-color: #f8f9fa;
        color: #333;
        font-weight: bold;
        padding: 10px;
        text-align: left;
    }

    /* Стиль для ячеек таблицы */
    td {
        padding: 10px;
        border: 1px solid #ddd;
        transition: background-color 0.3s ease;
    }

    /* Стиль для четных строк таблицы */
    tbody tr:nth-child(even) {
        background-color: #f8f9fa;
    }

    /* Стиль для нечетных строк таблицы */
    tbody tr:nth-child(odd) {
        background-color: #fff;
    }

    td:hover {
        background-color: #f9f9f9;
    }
   
</style>
