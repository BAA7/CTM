@{
    ViewData["Title"] = "CTM - Login";
}

<main>

    <form action="/login" method="POST">
        <label for="username">Имя пользователя:</label>
        <input type="text" id="username" name="username" required><br><br>

        <label for="password">Пароль:</label>
        <input type="password" id="password" name="password" required><br><br>

        <button type="submit">Войти</button>
        <button onclick="window.location.href='/Users/Register'">register test</button>
        <button onclick="window.location.href='/Users/Login'">login test</button>
        <button onclick="window.location.href='/Users/LoggedIn'">logged in test</button>
    </form>
</main>

