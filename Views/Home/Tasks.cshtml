@model dynamic
@using System.Globalization 
@{
    ViewData["Title"] = "CTM - Tasks";
}

<h1>Tasks</h1>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Task
            </th>
            <th>
                Performer
            </th>
            <th>
                Deadline
            </th>
        </tr>
    </thead>
    <tbody>
        @for(int i=0;i<Model.Tasks.Count; i++)
        {
            <tr>
                <td>
                    @Model.Tasks[i].name
                </td>
                <td>
                    @Model.Performers[i].name
                </td>
                <td>
                    @Model.Tasks[i].deadline.ToString("g",CultureInfo.GetCultureInfo("de-DE"))
                </td>
            </tr>
        }
    </tbody>
</table>